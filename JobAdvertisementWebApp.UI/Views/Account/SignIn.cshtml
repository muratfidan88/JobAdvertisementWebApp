@model AppUserSignInDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="mt-4">
        <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
            <div class="mb-3">
                <label class="mb-1">Kullanıcı Adı:</label>
                <input type="email" asp-for="@Model.MailAddress" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="mb-1">Şifreniz:</label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" asp-for="@Model.RememberMe">
                <label class="form-check-label">Beni Hatırla</label>
            </div>

            <div class="mb-3 text-end">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
            <div class="text-danger" asp-validation-summary="All">

            </div>
        </form>
    </div>
</body>
</html>