@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<MemberCvListDto>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @{ if (Model.Count == 0)
        {
            <div>
                <h4>İlana yapılmış başvuru bulunmamaktadır.</h4>
            </div>
            <div class="mb-3 text-end">
                <a class="btn btn-primary" asp-action="CreateAdvertisement" asp-route-id="@ViewBag.CompanyId" role="button">İlan Oluştur!</a>
            </div>
        }
        else
        {
            int i = 0;
            foreach (var item in Model)
            {
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                <strong>@item.Name </strong><strong>@item.LastName</strong>
                            </button>
                        </h2>
                        <div id="collapse_@i" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div class="mb-3 text-end">
                                    <form asp-action="GetMemberCv" asp-controller="Employer" method="post" class="p-4 w-75 mx-auto">
                                        <input value="@item.Id" name="id" type="hidden" class="form-control" />
                                        <button type="submit" class="btn btn-primary">Başvuranın CV'sini Görüntüle!</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                i++;
            }
        }
    }

</body>
</html>