@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<AdvertisementListDto>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @{ if (Model.Count == 0)
        {
            <div>
                <h4>Şirkete ait ilan bulunmamaktadır.</h4>
            </div>
            <div class="mb-3 text-end">
                <a class="btn btn-primary" asp-action="CreateAdvertisement" asp-route-companyId="@ViewBag.CompanyId" role="button">İlan Oluştur!</a>
            </div>
        }
        else
        {
            int i = 0;
            foreach (var item in Model)
            {


                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                <strong>@item.Title</strong>
                            </button>
                        </h2>
                        <div id="collapse_@i" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div>
                                    <strong>İlan Açıklaması : </strong>@item.Defination
                                </div>
                                <div class="mb-3 mt-3 text-end">
                                    <a class="btn btn-primary" asp-action="UpdateAdvertisement" asp-route-id="@item.Id" role="button">İlanı Güncelle!</a>
                                    <a class="btn btn-primary" asp-action="DisableAdvertisement" asp-route-id="@item.Id" role="button">İlanı Yayından Kaldır!</a>
                                    <a class="btn btn-primary" asp-action="DeleteAdvertisement" asp-route-id="@item.Id" role="button">İlanı Sil!</a>
                                    <a class="btn btn-primary" asp-action="GetApplication" asp-route-AdvertisementId="@item.Id" role="button">İlana Yapılan Başvuruları Görüntüle!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                i++;
            }
            <div class="mb-3 mt-3 text-end">
                <a class="btn btn-primary" asp-action="CreateAdvertisement" asp-route-companyId="@ViewBag.CompanyId" role="button">Yeni İlan Ekle!</a>
            </div>
        }
    }

</body>
</html>